@model EhbEvoApp.Models.RegisterViewModel
@{
    ViewBag.Title = "RegisterRole";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Rol toekennen</h4>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Kies User", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserName")
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Kies Rol", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("Name")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
           <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>

}